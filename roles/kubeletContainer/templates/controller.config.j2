apiVersion: v1
kind: Config
current-context: k8s
clusters:
- name: controller
  cluster:
    server: https://{{ apiserver }}:6443
    certificate-authority: /etc/kubernetes/ssl/ca.pem
users:
- name: controller
  user:
    client-certificate: /etc/kubernetes/ssl/controller.pem
    client-key:         /etc/kubernetes/ssl/controller-key.pem
contexts:
  - name: k8s
    context:
      cluster: controller
      user: controller
