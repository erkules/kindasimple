apiVersion: v1
kind: Config
current-context: k8s
clusters:
- name: cluster
  cluster:
    server: https://{{apiserver}}:6443
    certificate-authority: /etc/kubernetes/ssl/ca.pem
users:
- name: scheduler
  user:
    client-certificate: /etc/kubernetes/ssl/scheduler.pem
    client-key:         /etc/kubernetes/ssl/scheduler-key.pem
contexts:
  - name: k8s
    context:
      cluster: cluster
      user:  scheduler
